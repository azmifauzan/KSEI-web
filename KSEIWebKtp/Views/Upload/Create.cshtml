@model KSEIWebKtp.ViewModel.UploadViewModel

@{
    ViewData["Title"] = "Upload Berkas";
}

<div class="row" style="margin-top:20px;">
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-10">
        <h2 class="col-md-offset-3">Upload Berkas</h2><br/>

        <form asp-action="CreateUp" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="File_Upload" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input name="files" type="file" multiple required />
                        <span asp-validation-for="File_Upload" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Upload" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
                
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
